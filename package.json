{
	"name": "@elsikora/commitizen-plugin-commitlint-ai",
	"version": "1.0.0-dev.1",
	"description": "AI-powered Commitizen adapter with Commitlint integration",
	"keywords": [
		"conventional-changelog",
		"commitlint",
		"cz",
		"commitizen",
		"cz-commitlint",
		"ai",
		"openai",
		"anthropic",
		"claude",
		"gpt",
		"artificial-intelligence",
		"commit-message"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/ElsiKora/Commitizen-Plugin-Commitlint-AI"
	},
	"license": "MIT",
	"author": "ElsiKora",
	"type": "module",
	"exports": {
		"import": "./dist/esm/index.js",
		"require": "./index.cjs"
	},
	"files": [
		"index.cjs",
		"dist"
	],
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "npm run prebuild && rollup -c",
		"commit": "cz",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"lint": "eslint ./",
		"lint:all": "npm run lint && npm run lint:types",
		"lint:all:fix": "npm run lint:fix && npm run lint:types:fix",
		"lint:fix": "eslint --fix ./",
		"lint:types": "tsc --noEmit",
		"lint:types:fix": "tsc --noEmit --skipLibCheck",
		"prepare": "husky",
		"release": "semantic-release"
	},
	"config": {
		"commitizen": {
			"path": "./index.cjs"
		}
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.39.0",
		"@commitlint/ensure": "^19.5.0",
		"@commitlint/load": "^19.6.1",
		"@commitlint/types": "^19.5.0",
		"@rollup/plugin-typescript": "^12.1.2",
		"chalk": "^5.4.1",
		"dotenv": "^16.4.7",
		"lodash.isplainobject": "^4.0.6",
		"openai": "^4.86.1",
		"rollup": "^4.34.9",
		"word-wrap": "^1.2.5"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.7.1",
		"@commitlint/config-conventional": "^19.7.1",
		"@commitlint/cz-commitlint": "^19.6.1",
		"@elsikora/eslint-config": "^3.3.4",
		"@saithodev/semantic-release-backmerge": "^4.0.1",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^11.0.1",
		"@semantic-release/npm": "^12.0.1",
		"@semantic-release/release-notes-generator": "^14.0.3",
		"@types/inquirer": "^9.0.7",
		"@types/lodash.isfunction": "^3.0.9",
		"@types/lodash.isplainobject": "^4.0.9",
		"commitizen": "^4.3.1",
		"conventional-changelog-conventionalcommits": "^8.0.0",
		"eslint": "^9.21.0",
		"eslint-plugin-n": "^17.16.1",
		"husky": "^9.1.7",
		"lint-staged": "^15.4.3",
		"lodash.isfunction": "^3.0.9",
		"prettier": "^3.5.2",
		"rimraf": "^6.0.1",
		"semantic-release": "^24.2.3",
		"typescript": "^5.7.3"
	},
	"peerDependencies": {
		"commitizen": "^4.0.3",
		"inquirer": "^9.0.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
